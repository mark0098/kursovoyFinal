@page
@model kursovoy.Pages.Admin.AddGameModel
@{
    ViewData["Title"] = "Добавить игру";
}

<div class="container">
    <h1 class="text-center mb-4">Добавить игру</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Название игры:</label>
            <input type="text" class="form-control" id="title" name="Title" required />
        </div>

        <div class="form-group">
            <label for="description">Описание игры:</label>
            <textarea class="form-control" id="description" name="Description" required></textarea>
        </div>

        <div class="form-group">
            <label for="price">Цена (руб.):</label>
            <input type="number" class="form-control" id="price" name="Price" required min="0" />
        </div>

        <div class="form-group">
            <label for="coverImage">Обложка игры:</label>
            <input type="file" class="form-control" id="coverImage" name="CoverImage" accept="image/*" required />
        </div>

        <div class="form-group">
            <label for="screenshots">Скриншоты игры:</label>
            <input type="file" class="form-control" id="screenshots" name="Screenshots" accept="image/*" multiple />
        </div>

        <div class="form-group">
            <label for="systemRequirements">Системные требования:</label>
            <textarea class="form-control" id="systemRequirements" name="SystemRequirements" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Добавить игру</button>
    </form>
</div>